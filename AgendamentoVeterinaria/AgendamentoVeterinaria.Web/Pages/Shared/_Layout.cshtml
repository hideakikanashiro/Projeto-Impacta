<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgendamentoVeterinaria.Web</title>
    
    <link href="~/css/tailwind.css" rel="stylesheet" />
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <header class="bg-white shadow-md">
        <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
            <a class="text-xl font-bold text-gray-800 hover:text-gray-600" asp-area="" asp-page="/Index">Agendamento Veterinária</a>
            
            <div class="hidden md:flex items-center space-x-4">
                <a class="text-gray-600 hover:text-gray-800" asp-area="" asp-page="/Index">Home</a>
                <a class="text-gray-600 hover:text-gray-800" asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
            
            <button class="md:hidden text-gray-500 hover:text-gray-800 focus:outline-none focus:text-gray-800" type="button">
                <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
                    <path d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </nav>
    </header>

    <div class="container mx-auto mt-8 p-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-8 py-4 text-center text-gray-600">
        <div class="container mx-auto">
            &copy; 2025 - AgendamentoVeterinaria Impacta - com todos direitos reservados.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>