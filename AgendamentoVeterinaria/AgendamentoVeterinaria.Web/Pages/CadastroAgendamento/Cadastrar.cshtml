@page
@model AgendamentoVeterinaria.Web.Pages.CadastroAgendamento.CadastrarModel

@section NoScroll { }

<div class="bg-[url(/img/dog-cadastrar.jpg)] min-h-screen bg-cover bg-center bg-no-repeat">
	<form method="post" class="flex h-full items-center justify-start py-10">
		<div class="mx-20 w-full max-w-2xl rounded-2xl bg-indigo-600 p-16 shadow">
			<div class="flex flex-col gap-6">
				<div class="mb-2 flex flex-col">
					<h2 class="text-3xl font-bold text-white">Cadastrar</h2>
					<span class="text-indigo-300">Preencha os campos para agendar o atendimento.</span>
				</div>
				<div class="flex flex-col gap-2">
					<label class="font-medium text-white">Digite seu nome:</label>
					<input type="text"
						   asp-for="Agendamento.NomeDono"
						   class="rounded border border-gray-300 px-4 py-2" />
				</div>
				<div class="flex flex-col gap-2">
					<label class="font-medium text-white">Nome do pet:</label>
					<input type="text"
						   asp-for="Agendamento.NomePet"
						   class="rounded border border-gray-300 px-4 py-2" />
				</div>
				<div class="flex flex-col gap-6 md:flex-row md:justify-between">
					<div class="flex flex-col gap-2">
						<label class="font-medium text-white">Agendamento para data:</label>
						<input type="date"
							   asp-for="Agendamento.DataAgendamento"
							   class="w-full rounded border border-gray-300 px-4 py-2 md:w-64" />
					</div>
					<div class="flex flex-col gap-2">
						<label class="font-medium text-white">Serviço:</label>
						<select asp-for="Agendamento.TipoServico" class="w-full rounded border border-gray-300 px-4 py-2 md:w-64">
							<option disabled selected>Selecione um serviço..</option>
							<option>Veterinária</option>
							<option>Banho e Tosa</option>
						</select>
					</div>
				</div>
				<div class="flex flex-col gap-2">
					<label class="font-medium text-white">Observações:</label>
					<textarea asp-for="Agendamento.Observacoes" class="rounded border border-gray-300 px-4 py-2"></textarea>
				</div>
				<div class="mt-6 flex justify-end gap-3">
					<a asp-page="./Index" class="rounded border px-6 py-2 font-medium text-white shadow transition duration-150 hover:border-gray-200 hover:bg-white hover:text-black">Voltar</a>
					<button type="submit"
							class="rounded bg-black px-6 py-2 font-medium text-white shadow-lg transition duration-150 hover:bg-white hover:text-black">
						Cadastrar
					</button>
				</div>
			</div>
		</div>
	</form>
</div>
